<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   

    <Button
        android:id="@+id/choose_selfie"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="+" />

    <EditText
        android:id="@+id/new_diary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/new_diary_title"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Text" />

    <EditText
        android:id="@+id/new_diary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_selfie"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Title"
        android:textSize="@dimen/title_font_size" />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/new_diary_title"
        android:layout_alignRight="@+id/new_diary_title"
        android:ems="10"
        android:hint="Input Date"
        android:inputType="date" >

        <requestFocus />
    </EditText>

</RelativeLayout>